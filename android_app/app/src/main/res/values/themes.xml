<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Final_se" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:layout_margin">0dp</item>
        <item name="android:radius">0dp</item>
    </style>

    <style name="BlackButton">
        <item name="android:backgroundTint">#000000</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorLink">#FFFFFF</item>
    </style>

    <style name="RedButton">
        <item name="android:backgroundTint">#FF0000</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorLink">#FFFFFF</item>
    </style>

    <style name="GreenButton">
        <item name="android:backgroundTint">#00B803</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorLink">#FFFFFF</item>
    </style>
</resources>